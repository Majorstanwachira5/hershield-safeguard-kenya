# Server Configuration
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000
CLIENT_BASE_URL=http://localhost:5173

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/hershield
MONGODB_TEST_URI=mongodb://localhost:27017/hershield_test

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters
JWT_EXPIRE=90d
JWT_COOKIE_EXPIRE=90

# Encryption
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_MAX_STRICT=10

# AI Services
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@hershield.com
FROM_NAME=HerShield Safety Platform

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,txt

# Logging
LOG_LEVEL=info
LOG_FILE=logs/combined.log
LOG_ERROR_FILE=logs/error.log

# External APIs
EMERGENCY_SMS_API_KEY=your-sms-api-key
EMERGENCY_SMS_SENDER=HerShield
KENYAN_HELPLINE_API_KEY=your-helpline-api-key
